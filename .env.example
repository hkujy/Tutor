# Development Environment Variables
# Copy this file to .env.local and fill in your actual values

# App Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/tutoring_calendar_dev"
DIRECT_URL="postgresql://username:password@localhost:5432/tutoring_calendar_dev"

# Authentication
NEXTAUTH_SECRET="your-super-secret-key-min-32-chars-long"
NEXTAUTH_URL="http://localhost:3000"

# Redis Configuration
REDIS_URL="redis://localhost:6379"

# Email Configuration (SendGrid)
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@tutoringcalendar.com"

# File Storage
UPLOAD_DIR="uploads"
MAX_FILE_SIZE=10485760

# Optional: AWS S3 (for production)
# S3_BUCKET="your-bucket-name"
# S3_REGION="us-east-1"
# S3_ACCESS_KEY="your-access-key"
# S3_SECRET_KEY="your-secret-key"

# Optional: Google Calendar Integration
# GOOGLE_CLIENT_ID="your-google-client-id"
# GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Security & Monitoring
CORS_ORIGIN="http://localhost:3000"
LOG_LEVEL="info"

# Optional: Sentry (for error tracking)
# SENTRY_DSN="your-sentry-dsn"
